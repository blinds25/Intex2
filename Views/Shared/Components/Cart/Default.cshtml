@model int

<form asp-action="CheckoutCart" asp-controller="Home" method="post" class="d-inline">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-outline-dark">
        <i class="bi-cart-fill me-1"></i>
        Cart
        <span class="badge bg-dark text-white ms-1 rounded-pill" id="cart-quantity">@Model</span>
    </button>
</form>
